{
  "name": "@webkinz/wcl",
  "version": "0.0.1",
  "description": "Web Components Library",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/wcl/wcl.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "yarn run css.build && stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "lint": "yarn run lint.ts && yarn run lint.sass",
    "lint.ts": "tslint --project .",
    "lint.sass": "stylelint 'src/**/*.scss'",
    "css.build": "yarn run css.sass && yarn run css.minify",
    "css.sass": "sass src/css:./css",
    "css.minify": "cleancss -O2 -o ./css/wcl.bundle.css ./css/wcl.bundle.css",
    "clean": "npx rimraf www dist css loader"
  },
  "devDependencies": {
    "@stencil/core": "^1.17.3",
    "@stencil/sass": "^1.3.2",
    "clean-css-cli": "^4.3.0",
    "sass": "^1.26.10",
    "stylelint": "^13.7.2",
    "stylelint-order": "^4.1.0",
    "tslint": "~6.1.0",
    "tslint-ionic-rules": "^0.0.21",
    "tslint-react": "^5.0.0"
  }
}
